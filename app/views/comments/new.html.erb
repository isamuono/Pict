<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="test-center">コメント内容</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          <%#画面には表示しないが送信したいパラメーターを書く%>
          <%= f.hidden_field :topic_id, :value => @comment.topic_id %>
          <% if logged_in? %>
            <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>